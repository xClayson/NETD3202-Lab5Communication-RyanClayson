@model NETD3202_Lab5Communication_RyanClayson.Models.PlayerDetails

@{
    ViewData["Title"] = "Edit";
}

<div style="margin-left: 20%; margin-right: 20%;">
    <h4>Edit Player</h4>
    <hr />
    <div>
        <div style="margin-left: 30%; margin-right: 30%">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="playerID" />
                <div class="form-group">
                    <label asp-for="playerID" class="control-label">Player ID</label>
                    <input asp-for="playerID" class="form-control" value="@Model.playerID" disabled />
                    <span asp-validation-for="playerID" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="playerAge" class="control-label">Age</label>
                    <input asp-for="playerAge" class="form-control" placeholder="Age of Player" />
                    <span asp-validation-for="playerAge" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="playerHeight" class="control-label">Height</label>
                    <input asp-for="playerHeight" class="form-control" placeholder="Height of Player" />
                    <span asp-validation-for="playerHeight" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="playerWeight" class="control-label">Weight</label>
                    <input asp-for="playerWeight" class="form-control" placeholder="Weight of Player" />
                    <span asp-validation-for="playerWeight" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a style="color: blue" asp-controller="Players" asp-action="Index">NBA Player List</a>&nbsp;&nbsp;
        <a style="color: blue" asp-action="Index">Player Details List</a>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
